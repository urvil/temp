<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ManagerAPPTextView">
        <attr name="textview_font_name" format="string" />
    </declare-styleable>

    <declare-styleable name="ManagerAPPButtonView">
        <attr name="button_font_name" format="string" />
    </declare-styleable>

    <declare-styleable name="ManagerAPPEditTextView">
        <attr name="edit_text_font_name" format="string" />
    </declare-styleable>


    <declare-styleable name="custom_font">
        <attr name="type">
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="name">
            <enum name="regular" value="1" />
            <enum name="semibold" value="2" />
            <enum name="bold" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BarcodeScannerView">
        <attr name="shouldScaleToFill" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TextView" >
        <attr name="fontFamily" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="customFont" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="customFontET" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="customFontBTN" format="string"/>
    </declare-styleable>

</resources>